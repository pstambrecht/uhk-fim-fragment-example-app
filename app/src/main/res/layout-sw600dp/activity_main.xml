<?xml version="1.0" encoding="utf-8"?>
<!-- Defines tablet layout with minimal screen width 600dp -->
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="horizontal">

	<!-- Use value in layout_width from dimen.xml file instead current solution -->
	<fragment
		android:id="@+id/frameLayout_menu"
		android:name="cz.stambrecht.fragmentexample.MenuFragment"
		android:layout_width="300dp"
		android:layout_height="match_parent"/>

	<FrameLayout
		android:id="@+id/frameLayout_content"
		android:layout_width="match_parent"
		android:layout_height="match_parent"/>

</LinearLayout>